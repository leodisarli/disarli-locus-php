{
    "name": "leodisarli/disarli-locus-php",
    "description": "PHP library get urls of services in a microservice architecture, with redis cache",
    "version": "1.0.0",
    "type": "library",
    "require": {
        "php": "^7.1",
        "predis/predis": "1.1",
        "leosarli/disarli-aws-service-discovery-php": "1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "7.5",
        "mockery/mockery": "1.3",
        "squizlabs/php_codesniffer": "3.5"
    },
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Leo Di Sarli",
            "email": "leosarli@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Locus\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "bash contrib/setup.sh"
        ],
        "check": [
            "@lint",
            "@cs",
            "@test"
        ],
        "lint": [
            "find ./src -name '*.php' -print0 | xargs -0 -n1 -P8 php -l -d display_errors=0"
        ],
        "cs": "vendor/bin/phpcs",
        "test" : "phpdbg -qrr vendor/bin/phpunit",
        "test-cover" : "phpdbg -qrr vendor/bin/phpunit --coverage-html coverage --coverage-clover coverage/coverage.xml --log-junit coverage/junit.xml"
    }
}
